<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_bg"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="376dp"
        android:layout_height="376dp"
        android:layout_marginTop="47dp"
        android:adjustViewBounds="true"
        android:maxWidth="376dp"
        android:maxHeight="376dp"
        android:src="@drawable/welcome"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <carbon.widget.LinearLayout
       android:id="@+id/linearLayout8"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:elevation="8dp"
       app:carbon_cornerRadiusTopStart="50dp"
       app:carbon_cornerRadiusTopEnd="50dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="406dp"
           android:background="@drawable/ic_onboarding_bottom_bg"
           android:paddingHorizontal="30dp"
           android:paddingVertical="35dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="vertical">

               <carbon.widget.LinearLayout
                   android:id="@+id/dot1"
                   android:layout_width="76dp"
                   android:layout_height="9dp"
                   android:layout_marginHorizontal="5dp"
                   android:background="@color/primary"
                   android:elevation="10dp"
                   app:carbon_cornerRadius="4.5dp"
                   app:carbon_elevationShadowColor="#6143BE" />

               <View
                   android:layout_width="0dp"
                   android:layout_height="30dp" />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Hey!"
                       android:textColor="#AEAEAE"
                       android:textSize="15sp" />

                   <ImageView
                       android:id="@+id/image_view"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="3dp"
                       android:adjustViewBounds="true"
                       android:maxWidth="20dp"
                       android:maxHeight="25dp"
                       android:scaleType="fitCenter"
                       android:src="@drawable/hand" />
               </LinearLayout>

               <View
                   android:layout_width="0dp"
                   android:layout_height="20dp" />

               <TextView
                   android:layout_width="298dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:lineHeight="40dp"
                   android:text="Welcome to the world of branchless banking"
                   android:textColor="@color/dark33"
                   android:textSize="20sp"
                   android:textStyle="bold" />

               <View
                   android:layout_width="0dp"
                   android:layout_height="15dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="We are happy to have you!"
                   android:textColor="#AEAEAE"
                   android:textSize="15sp" />

               <View
                   android:layout_width="0dp"
                   android:layout_height="56dp" />

               <LinearLayout
                   android:layout_width="206dp"
                   android:layout_height="wrap_content">

                   <include
                       android:id="@+id/button"
                       layout="@layout/filled_button" />
               </LinearLayout>

           </LinearLayout>

       </ScrollView>
   </carbon.widget.LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>