<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:foreground="@drawable/set_pin_bg"
    tools:context=".SetPinActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="53dp"
        android:src="@drawable/ic_arrow_left"
        android:foregroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="61dp"
            android:maxHeight="61dp"
            android:src="@drawable/ic_pin_lock" />

        <View
            android:layout_width="0dp"
            android:layout_height="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set up Your PIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="11dp" />

        <TextView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter your desired four digit PIN and confirm the PIN to proceed."
            android:textColor="@color/white"
            android:textSize="13sp"
            android:lineHeight="19dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Enter PIN"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lineHeight="19dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <com.chaos.view.PinView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:cursorVisible="true"
                android:inputType="number"
                style="@style/PinWidget.PinView"
                android:itemBackground="@color/white"
                app:cursorColor="@color/primary"
                app:hideLineWhenFilled="true"
                app:itemCount="4"
                app:lineColor="@color/white"
                app:itemHeight="50dp"
                app:itemWidth="50dp"
                app:itemRadius="10dp"
                app:itemSpacing="40dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="42dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Confirm PIN"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lineHeight="19dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <com.chaos.view.PinView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:cursorVisible="true"
                android:inputType="number"
                android:itemBackground="@color/white"
                app:cursorColor="@color/primary"
                app:hideLineWhenFilled="true"
                app:itemCount="4"
                app:lineColor="@color/white"
                app:itemHeight="50dp"
                app:itemWidth="50dp"
                app:itemRadius="10dp"
                app:itemSpacing="40dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/button"
            layout="@layout/filled_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>