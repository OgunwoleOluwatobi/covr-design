<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/pin_pad_bg"
    app:carbon_cornerRadius="20dp"
    app:carbon_cornerRadiusTopStart="20dp"
    app:carbon_cornerRadiusTopEnd="20dp"
    android:layout_gravity="center_horizontal"
    android:paddingTop="34dp"
    android:paddingHorizontal="22dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Authorize Request"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111111"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Enter your PIN to authorize this request"
                android:textSize="13sp"
                android:textColor="#111111"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel"/>
    </LinearLayout>

    <com.chaos.view.PinView
        android:id="@+id/edit_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:cursorVisible="true"
        android:inputType="number"
        style="@style/PinWidget.PinView"
        android:itemBackground="#F7F5FF"
        app:cursorColor="@color/primary"
        app:hideLineWhenFilled="true"
        app:itemCount="4"
        app:lineColor="#DBCFFF"
        app:lineWidth="1dp"
        app:itemHeight="50dp"
        app:itemWidth="50dp"
        app:itemRadius="10dp"
        app:itemSpacing="40dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirm_button"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:layout_height="58dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:stateListAnimator="@null"
                android:layout_height="match_parent"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:stateListAnimator="@null"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="6"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="8"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:stateListAnimator="@null"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="9"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/white_rounded_10"
                android:onClick="onClick"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:stateListAnimator="@null"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/keypad_bg"
                android:onClick="onClick"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1E1147"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:stateListAnimator="@null"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/white_rounded_10"
                android:paddingTop="12dp"
                android:onClick="onClick"
                android:drawableTop="@drawable/ic_delete"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>