<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="53dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="74dp"
            android:maxHeight="74dp"
            android:src="@drawable/lock" />

        <View
            android:layout_width="0dp"
            android:layout_height="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/dark33"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="11dp" />

        <TextView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter the password sent to your mail, then enter newly your preferred password."
            android:textColor="@color/dark33"
            android:textSize="13sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/oldPassword"
                layout="@layout/custom_textfield" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <include
                android:id="@+id/newPassword"
                layout="@layout/custom_textfield" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <include
                android:id="@+id/confirmPassword"
                layout="@layout/custom_textfield" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <include
                android:id="@+id/secAnswer"
                layout="@layout/custom_textfield" />

            <View
                android:layout_width="0dp"
                android:layout_height="15dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/button"
            layout="@layout/filled_button" />
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:foreground="@drawable/circle_bg"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:maxHeight="160dp"
            android:maxWidth="160dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password reset successful!"
            android:textColor="@color/dark33"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="11dp" />

        <TextView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your password has been reset successfully. You can now proceed to login."
            android:textColor="@color/dark33"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="232dp"
            android:layout_height="wrap_content">
            <include
                layout="@layout/filled_button"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>