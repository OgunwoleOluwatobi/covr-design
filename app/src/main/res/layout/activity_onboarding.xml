<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/page_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splashBg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/ic_onboarding_bottom_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/short_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All in one"
            android:textColor="#AEAEAE"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your one stop application for financial services"
            android:lineHeight="40dp"
            android:gravity="center"
            android:textColor="#33383C"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="58dp"
            android:layout_marginVertical="5dp"/>

        <carbon.widget.LinearLayout
            android:id="@+id/next"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:carbon_elevationShadowColor="#6143BE"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="8dp"
            app:carbon_cornerRadius="32.5dp"
            android:background="#6143BE"
            android:layout_marginTop="34dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_onboarding_arrow_right" />
        </carbon.widget.LinearLayout>

        <LinearLayout
            android:id="@+id/button_holder"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="43dp"
            android:layout_marginHorizontal="23dp">

            <LinearLayout
                android:layout_width="162dp"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/signup"
                    layout="@layout/border_button" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="162dp"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/login"
                    layout="@layout/filled_button" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/page_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <carbon.widget.LinearLayout
            android:id="@+id/dot1"
            android:layout_width="76dp"
            android:layout_height="9dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/primary"
            android:elevation="10dp"
            app:carbon_cornerRadius="4.5dp"
            app:carbon_elevationShadowColor="#6143BE" />

        <carbon.widget.LinearLayout
            android:id="@+id/dot2"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginHorizontal="5dp"
            app:carbon_cornerRadius="4.5dp"
            android:background="#E5E1FB" />

        <carbon.widget.LinearLayout
            android:id="@+id/dot3"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginHorizontal="5dp"
            app:carbon_cornerRadius="4.5dp"
            android:background="#E5E1FB" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>